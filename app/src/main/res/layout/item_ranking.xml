<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/rank_rank"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        />

    <com.superexcitingboat.runningdate.utils.CircleImageView
        android:id="@+id/ranking_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/none"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/rank_rank"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20sp"
        android:layout_toEndOf="@+id/ranking_icon"
        />

    <TextView
        android:id="@+id/rank_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/rank_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/background"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/rank_name"
        android:layout_alignBottom="@+id/rank_name"
        android:layout_toStartOf="@+id/rank_unit" />
</RelativeLayout>