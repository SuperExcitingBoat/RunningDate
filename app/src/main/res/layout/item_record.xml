<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_32_text_height">

    <ImageView
        android:id="@+id/record_circle"
        android:src="@drawable/circle"
        android:layout_width="@dimen/default_32_text_height"
        android:layout_height="@dimen/default_32_text_height" />

    <TextView
        android:id="@+id/record_step"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_32_text_height"
        android:layout_toEndOf="@id/record_circle"
        android:layout_toRightOf="@id/record_circle" />

    <TextView
        android:id="@+id/record_date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_32_text_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>