<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.superexcitingboat.runningdate.view.fragment.PersonalCenterFragment">

    <RelativeLayout
        android:id="@+id/personal_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/personal_icon"
            android:layout_width="@dimen/default_64_text_height"
            android:layout_height="@dimen/default_64_text_height"
            android:background="@color/none"
            android:src="@drawable/personal_icon" />

        <TextView
            android:id="@+id/personal_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_32_text_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@id/personal_icon"
            android:layout_toRightOf="@id/personal_icon"
            android:gravity="center_vertical"
            android:text="@string/click_to_login" />

        <TextView
            android:id="@+id/personal_signature"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_32_text_height"
            android:layout_below="@id/personal_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@id/personal_icon"
            android:layout_toRightOf="@id/personal_icon"
            android:gravity="center_vertical"
            android:text="@string/click_to_login" />

        <ImageButton
            android:layout_width="@dimen/default_32_text_height"
            android:layout_height="@dimen/default_32_text_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/personal_name"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/none"
            android:src="@color/tianyi_blue" />
    </RelativeLayout>

    <TextView
        android:id="@+id/count_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_32_text_height"
        android:layout_below="@id/personal_information"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/step_route"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_32_text_height"
        android:layout_below="@id/count_history"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/my_class"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_32_text_height"
        android:layout_below="@id/step_route"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_32_text_height"
        android:layout_below="@id/my_class"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/default_32_text_height"
        android:gravity="center_vertical"
        android:text="@string/app_name" />
</RelativeLayout>
