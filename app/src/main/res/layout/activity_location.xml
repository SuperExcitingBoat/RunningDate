<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.superexcitingboat.runningdate.view.activity.LocationActivity">
    <com.amap.api.maps2d.MapView
        android:id="@+id/map_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_running_info"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:background="@drawable/running_info_bg"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计时长"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="62dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已跑路程"
            android:textColor="#fff"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="53dp" />

        <TextView
            android:id="@+id/tv_location_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#fff"
            android:text="00:00:00"
            android:layout_above="@+id/textView"
            android:layout_marginBottom="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="36dp" />

        <TextView
            android:id="@+id/tv_location_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#fff"
            android:layout_marginRight="45dp"
            android:text="0.0 km"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/textView2"
          />
    </RelativeLayout>
    <Button
        android:id="@+id/bt_location_now"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/running_button_bg"
        android:textColor="#fff"
        android:text="结束跑步"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
